# ===========================================
# Environment Variables Template
# ===========================================
# Copy this file to .env and fill in the actual values
# DO NOT commit the .env file to version control

# ===========================================
# TimescaleDB Configuration
# ===========================================
TIMESCALE_DB_NAME=greenhouse_timeseries
TIMESCALE_USER=admin
TIMESCALE_PASSWORD=

# ===========================================
# PostgreSQL Metadata Configuration
# ===========================================
METADATA_DB_NAME=greenhouse_metadata
METADATA_USER=admin
METADATA_PASSWORD=

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# EMQX MQTT Broker Configuration
# ===========================================
EMQX_DASHBOARD_USERNAME=admin
EMQX_DASHBOARD_PASSWORD=

# ===========================================
# MQTT Client Configuration
# ===========================================
MQTT_BROKER_URL=tcp://emqx:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID_PREFIX=api_local_001

# ===========================================
# Spring Application Configuration
# ===========================================
SPRING_PROFILES_ACTIVE=local

# ===========================================
# JVM Options
# ===========================================
JAVA_OPTS=-Xms256m -Xmx512m
